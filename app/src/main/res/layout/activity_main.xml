<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/account"
        android:layout_alignParentTop="true"
        android:layout_marginTop="141dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Enter user-id"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="128dp"
        android:layout_alignRight="@+id/account" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailid"
        android:layout_below="@+id/emailid"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="204dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="129dp"
        android:background="@android:color/white"
        android:text="LOGIN"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="263dp" />

    <Button
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Create a new account"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="437dp" />

    <EditText
        android:id="@+id/forgot_psswrd"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="117dp"
        android:layout_marginStart="105dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forgot username or password"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="390dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="38dp"
        android:layout_height="52dp"
        android:layout_above="@+id/forgot_psswrd"
        android:layout_alignParentStart="true"
        android:layout_marginStart="153dp"
        app:srcCompat="?android:attr/fingerprintAuthDrawable"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="338dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="153dp" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="165dp"
        android:text="or"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="318dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="165dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/digibank"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        app:srcCompat="@drawable/dbslogo"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="32dp"
        android:layout_marginLeft="54dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp"
        android:layout_toStartOf="@+id/account"
        app:srcCompat="@drawable/passwrd"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="213dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/emailid"
        android:layout_toStartOf="@+id/emailid"
        android:visibility="visible"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="137dp"
        android:layout_toLeftOf="@+id/emailid" />

    <TextView
        android:id="@+id/digibank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="41dp"
        android:text="DigiBank"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/login"
        android:text="by DBS"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:layout_toEndOf="@+id/or"
        android:text="Live more,Bank less"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="78dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />


</RelativeLayout>